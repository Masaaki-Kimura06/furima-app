= render "items/header"
.category
  .category__product-box
    .category__product-box__head
      = link_to "#" do
        %h3
          = "#{@category.name}の商品一覧"
    .category__product-box__lists
      -@items.each do |item|
        .category__product-box__lists__list
          = link_to item_path(item.id) do
            %figure.category__product-box__lists__list__image
              = image_tag item.images.find_by(item_id: item.id).img_url, size: "220x150",alt: "ICON", id: "cover"
            .category__product-box__lists__list__body
              .category__product-box__lists__list__body__name
                %h3
                  = "#{item.name}"
              .category__product-box__lists__list__body__details
                %ul
                  %li
                    = "#{item.price.to_s(:delimited)}円"
                  %li.category__product-box__lists__list__body__details__link-icon
                    %span
                      ★
                    ０
                %p
                  (税込)
= render "items/footer"